#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
require File.dirname(__FILE__)+'/../config/environment'
ActionMailer::Base.raise_delivery_errors = false
ActionMailer::Base.delivery_method = :test

# arguments

login_name = ARGV[0]
email = ARGV[1]
password = ARGV[2]
key_file = ARGV[3]

if User.find_by_email(email)
  puts "The email is already used."
  exit(1)
end

# Input the SSH key string from the file generated by the Lifthub web app.
key_str = ''
File::open(key_file) { |f|
  key_str = f.read
}

## Debug
# puts login_name
# puts email
# puts password
# puts key_file
# puts key_str

user = User.new :password => password, :password_confirmation => password, :email => email, :terms_of_use => '1'
user.login = login_name.dup
user.is_admin = false
if user.save
  user.activate
  puts "User #{email} created successfully."
else
  puts "Failed creating user #{email}."
  exit(1)
end

# Add SSH key
ssh_key = user.ssh_keys.new
ssh_key.key = key_str

if ssh_key.save
  puts "SSH Key for user #{email} created successfully."
else
  puts "Failed creating SSH key for user #{email}."
  exit(1)
end

SshKey.add_to_authorized_keys(ssh_key.to_key)
